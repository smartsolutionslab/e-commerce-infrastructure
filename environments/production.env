# Production Environment Variables

# Database Connections
CUSTOMER_DB_CONNECTION=Server=prod-sql.database.windows.net;Database=ECommerce_CustomerManagement_Prod;User ID=ecommerce_user;Password=${DB_PASSWORD};TrustServerCertificate=true
PRODUCT_DB_CONNECTION=Server=prod-sql.database.windows.net;Database=ECommerce_ProductCatalog_Prod;User ID=ecommerce_user;Password=${DB_PASSWORD};TrustServerCertificate=true
ORDER_DB_CONNECTION=Server=prod-sql.database.windows.net;Database=ECommerce_OrderManagement_Prod;User ID=ecommerce_user;Password=${DB_PASSWORD};TrustServerCertificate=true

# Authentication
AUTH_AUTHORITY=https://auth.yourdomain.com/realms/ecommerce
AUTH_AUDIENCE=ecommerce-api
AUTH_REQUIRE_HTTPS=true

# Message Broker
RABBITMQ_HOST=prod-rabbitmq.servicebus.windows.net
RABBITMQ_USERNAME=ecommerce_service
RABBITMQ_PASSWORD=${RABBITMQ_PASSWORD}

# Redis
REDIS_CONNECTION=prod-redis.redis.cache.windows.net:6380,password=${REDIS_PASSWORD},ssl=True,abortConnect=False

# Monitoring
APPLICATION_INSIGHTS_CONNECTION_STRING=${APP_INSIGHTS_CONNECTION_STRING}

# API Gateway
GATEWAY_CUSTOMER_SERVICE_URL=http://customer-service:8080
GATEWAY_PRODUCT_SERVICE_URL=http://product-service:8080
GATEWAY_ORDER_SERVICE_URL=http://order-service:8080

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10
